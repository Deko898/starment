{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "paths": {
      "@starment/config": ["src/config/index"],
      "@starment/logger": ["src/logger/index"],
      "@starment/core": ["src/core/index"],
      "@starment/health": ["src/health/index"],
      "@starment/metrics": ["src/metrics/index"],

      "@starment/supabase": ["src/infra/supabase/index"],
      "@starment/video": ["src/infra/video/index"],
      "@starment/payments": ["src/infra/payments/index"],
      "@starment/cache": ["src/infra/cache/index"],

      "@starment/shared": ["src/shared/index"],

      "@starment/auth": ["src/features/auth/index"],
      "@starment/profile": ["src/features/profile/index"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
